<idea-plugin>
    <id>com.simon.codenotes.id</id>
    <name>CodeNotes</name>
    <version>1.0</version>
    <vendor email="yakunLang@163.com" url="http://www.simon.com">langyakun</vendor>

    <description><![CDATA[
        该插件可以帮助我们在阅读代码时记录笔记，并以追加的形式记录，最终形成一个完成代码笔记<br>
        <em>MarkDown文档</em>
        ]]></description>

    <change-notes><![CDATA[
        第一版，对笔记增、删、改、查<br>
        <em>MarkDown形式的笔记</em>
        ]]>
    </change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="notewindow" factoryClass="com.simon.codenotes.window.NoteListWindowFactory" anchor="right" icon="/img/logo.png"></toolWindow>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="PopupAction_ID" class="com.simon.codenotes.action.PopupAction" text="添加CN笔记" description="添加笔记">
            <add-to-group group-id="Uml.NodeCellEditorPopup" anchor="first"/>
        </action>
        <action id="PopupAction_ID" class="com.simon.codenotes.action.PopupAction" text="添加CN笔记" description="添加笔记">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>